{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "strictNullChecks": true,

    "sourceMap": true,
    "jsx": "react-jsx",

    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    "paths": {
      "@/*": ["./src/js/*"],
      "@public/*": ["./src/public/*"],
      "@Util/*": ["./src/js/components/Util/*"]
    },

    "types": ["node"],
  },
  "include": ["src", "src/custom.d.ts"]
}